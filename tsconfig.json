{
    "name": "typ-mvc",
    "compilerOptions": {
        "importHelpers": true,
        "baseUrl": ".",
        "sourceMap": true,
        "declaration": true,
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "paths": {
            "@mvx/model": [
                "packages/model/src"
            ],
            "@mvx/mvc": [
                "packages/mvc/src"
            ],
            "@mvx/typeorm-adapter": [
                "packages/typeorm-adapter/src"
            ],
            "@mvx/identity": [
                "packages/identity/src"
            ],
            "@mvx/identity-server": [
                "packages/identity-server/src"
            ],
            "@mvx/orm": [
                "packages/orm/src"
            ]
        },
        "lib": [
            "dom",
            "es2015",
            "es2017"
        ]
    },
    "exclude": [
        "test",
        "lib"
    ],
    "compileOnSave": false
}